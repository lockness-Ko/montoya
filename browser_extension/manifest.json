{
  "manifest_version": 2,
  "name": "Hacking helper",
  "version": "0.0.1",
  "description": "Helps you search for bugs in websites more efficiently.",
  "browser_action": {
    "default_title": "Find subdomains",
    "default_popup": "popup/find_subdomains.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["harness.js"]
    },
    {
      "matches": ["http://*/*"],
      "js": ["harness.js"]
    }
  ],
  "permissions": [
    "http://localhost:1377/*",
    "https://cdnjs.cloudflare.com/*"
  ]
}
